{
  "name": "Tops",
  "description": "A Top collection web extension",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "16":"icons/icon_16.png",
    "32":"icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "vue-web-extension-ui-element",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "*://*.sina.com.cn/*",
    "*://*.weibo.com/*",
    "*://*.zhihu.com/*'",
    "*://github.com/*'"
  ]
}
